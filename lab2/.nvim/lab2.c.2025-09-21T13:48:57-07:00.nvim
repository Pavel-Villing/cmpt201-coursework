#include <stdio.h> 
#include <unistd.h>
#include <sys/wait.h>

int main(){
  char* lineptr = NULL;
  size_t n = 0; 
  ssize_t read;
  printf("Enter programs to run.\n");

  while (1){
    read = getline(&lineptr, &n, stdin);
    if (lineptr[n - 1] == '\n'){
      lineptr[n - 1] = '\0';
    }

    pid_t pid = fork();

    if (pid == 0){
      execl(lineptr, lineptr, (char *)NULL);
    }
    else{
      int status;
      waitpid(pid, &status, 0);
    }
  }
}

